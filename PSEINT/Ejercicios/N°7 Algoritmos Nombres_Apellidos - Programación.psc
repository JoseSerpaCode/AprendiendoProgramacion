	Definir Nombre, Apellidos, Sexo, Edad Como Caracter;
	
	Escribir "Escribir Nombres";
	Leer Nombre;
	
	Escribir "Escribir Apellidos";
	Leer Apellidos;
	
	Escribir "Escribir Sexo";
	Leer Sexo;
	
	Escribir "Escribir Edad";
